<root BTCPP_format="4">
    <BehaviorTree ID="MainTree">
        <Sequence>
            <ClearCostmap name = "clear_costmap"/>
            <ReactiveFallback>
                <FindShelfClient name = "find_shelf_client" position_shelf_found="{position_shelf}"/>
                <TurnRobot name = "Turn_robot"/>
            </ReactiveFallback>
            <PublishTransform name = "Publish transform" position_shelf="{position_shelf}" target_goal= "{target_goal_bt}"/>
            </ReactiveFallback>
                <CheckNavGoal name= "check_nav_goal" check_nav_goal = "{state_nav_goal}"  error_min_check= "0.5" target_frame_check="target_goal_frame"/>
                <Nav2Client name = "nav2_client" goal= "{target_goal_bt}" aborted="{state_nav_goal}"/>
            </ReactiveFallback>
        </Sequence>
    </BehaviorTree>
</root>

